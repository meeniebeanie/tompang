<div class="panel panel-default">
  <div class="panel-body">
    <%= simple_form_for @product do |f| %>


      <% if product.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

          <ul>
          <% product.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>


      <%= f.input :product_name, placeholder: "What are you selling?", required: 'true'  %>
      <%= f.input :country, include_blank: false, priority: [ "Singapore" ], required: 'true'  %>
      <%= f.input :product_description, placeholder: "What's cool about it?", required: 'true'  %>
      <%= f.input :price, placeholder: "How much is it?", required: 'true' %>
      <%= f.button :submit %>
    <% end %>
  </div>
</div>
