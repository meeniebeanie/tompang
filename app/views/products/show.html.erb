<% provide(:title, "Products") %>
<p id="notice"><%= notice %></p>

<div class="container col-lg-6">
<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">
      <%=link_to @product.product_name, products_path(@product)%>
    </h3>
    <p class="panel-title">Listed by:<em> <%= link_to @product.user.first_name, user_url %> </em></p>
  </div>
  <div class="panel-body">
    <p>
      <strong>Product Description:</strong><br>
      <%= @product.product_description %>
    </p>

    <p>
      <strong>Price:</strong><br>
      $<%= number_with_precision(@product.price, precision:2) %>
    </p>

    <% if @product.user == current_user %>
      <div class="btn-group">
      <%= link_to 'Edit', edit_product_path, type:"button", class:"btn btn-default"%>
      <%= link_to 'Remove', @product, method: :delete, data: { confirm: 'Are you sure?' }, type:"button", class:"btn btn-default" %>
      </div>
    <% end %>
  </div>
</div>
</div>
