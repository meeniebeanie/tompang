<% provide(:title, "Products") %>

<p id="notice"><%= notice %></p>
<h1>Products</h1>

<div class="form-group col-sm-12">
  <label for="country"><h3>Choose Country:</h3></label>
  <select       class = "form-control"
                   id = "country"
             onchange = "window.location.href = '/product/' + this.value;">
    <% @products.each do |product| %>
    <option><%= link_to "#{product.country}", "/product/#{product.country}" %></option>
    <% end %>
  </select>
</div>

<% @products.each do |product| %>
<div class="col-sm-6 col-md-4 col-lg-3">
  <div class="card">
    <div class="card-img thumbnail img-responsive" style="background-image: url(<%= product[:imgurl]%>)"></div>
    <!-- <img class="card-img img-responsive" src="<%= product[:imgurl]%>" alt="Card image cap"> -->
    <div class="card-block">
      <h4 class="card-title"><%= link_to product.product_name, product %></h4>
      <p class="card-text" id="country"><%= product.country %>
      <p class="card-text"><%=
      truncate( product.product_description, length: 90, omission: '...') %>
    </div>
  </div>
</div>
<% end %>
