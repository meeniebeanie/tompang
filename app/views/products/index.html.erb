<% provide(:title, "Products") %>

<p id="notice"><%= notice %></p>
<h1>Products</h1>

<table class='table'>
  <thead>
    <tr>
      <th>Product name</th>
      <th>Country</th>
      <th>Product Description</th>
      <th>Price</th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= link_to product.product_name, product %></td>
        <td><%= product.country %></td>
        <td><%= product.product_description %></td>
        <td>$<%= number_with_precision(product.price, precision:2) %></td>

        <% if product.user == current_user %>
            <td>
              <div class="btn-group">
              <%= link_to 'Edit', edit_product_path(product), type:"button", class:"btn btn-default"%>
              <%= link_to 'Remove', product, method: :delete, data: { confirm: 'Are you sure?' }, type:"button", class:"btn btn-default" %>
              </div>
            </td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New Product', new_product_path, class:"btn btn-info" %>
