<% provide(:title, "Products") %>

<p id="notice"><%= notice %></p>
<h1>Products</h1>

<table class='table'>
  <thead>
    <tr>
      <th>Product name</th>
      <th>Product Description</th>
      <th>Price</th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= link_to product.product_name, product %></td>
        <td><%= product.product_description %></td>
        <td>$<%= number_with_precision(product.price, precision:2) %></td>
      </tr>
    <% end %>

  </tbody>
</table>

<%= link_to 'New Product', new_product_path, class:"btn btn-info" %>
